<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="5sp"
    tools:context=".BarChartActivity">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">


            <RelativeLayout
                android:id="@+id/name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_centerHorizontal="true"
                    android:textSize="25sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Stock Market"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_below="@+id/name"
                android:padding="1sp"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <Button
                    android:layout_marginTop="5sp"
                    android:id="@+id/google"
                    android:layout_width="200dp"
                    android:layout_height="100dp"
                    android:background="@drawable/google"
                    />
                <Button
                    android:layout_marginTop="5sp"
                    android:id="@+id/facebook"
                    android:layout_width="200dp"
                    android:layout_height="100dp"
                    android:background="@drawable/facebook"
                    android:layout_below="@+id/google"
                    />
                <Button
                    android:layout_marginTop="5sp"
                    android:id="@+id/microsoft"
                    android:layout_width="200dp"
                    android:layout_height="100dp"
                    android:layout_below="@+id/facebook"
                    android:background="@drawable/microsoft"
                    />
                <Button
                    android:layout_marginTop="5sp"
                    android:id="@+id/fetchsky"
                    android:layout_width="200dp"
                    android:layout_below="@+id/microsoft"
                    android:layout_height="100dp"
                    android:background="@drawable/fetchsky"
                    />
                <Button
                    android:layout_marginTop="5sp"
                    android:id="@+id/amazon"
                    android:layout_width="200dp"
                    android:layout_height="100dp"
                    android:layout_below="@+id/fetchsky"
                    android:background="@drawable/amzon"
                    />





            </RelativeLayout>





        </RelativeLayout>
    </ScrollView>
</RelativeLayout>